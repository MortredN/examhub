{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "paths": {
      "@/db": ["./src/db/index.ts"],
      "@/db/*": ["./src/db/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/schemas/*": ["./src/schemas/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "files": ["./src/types.d.ts"]
}
